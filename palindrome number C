int main()
{
    int number;
    printf("enter number=");
    scanf("%d",&number);
    if(ispalindrome(number))
        printf("is palindrome %d\n",number);
    else
        printf("not %d\n",number);

}
int ispalindrome(int number)
{
    int  n,c,s=0,r=0;
    c=n;
    while(n<0)
    {
        r=n%10;
        s=r+(s*10);
        n=n/10;


    }
    if(c==s)
        return 1;
    else
        return 0;



}
